          label(for='contact-email') Your email
          input#contact-email.u-full-width(type='email', name='_replyto', placeholder='john.doe@mailbox.com', required)
      label(for='contact-message') Your message
      textarea#contact-message.u-full-width(placeholder='Hi Matt, I was wonderingâ€¦')
      input.button-primary(type='submit', value='Send')